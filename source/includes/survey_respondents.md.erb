    "name": "NPS Survey",
  },
  "traits": [{
    "id": "fvquqiaux53rdcb",
    "key": "email",
    "key_display": "Email",
    "value": "johndoe@gmail.com"
  }],
  "answers": [{
    "id": "srasw_4ws3uioc3tokrhs",
    "question": {
      "id": "srqn_5zn4ytxqf6wxqg1",
      "type": "RATING",
